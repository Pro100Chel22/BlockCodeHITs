<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/scroll_view_wave_default</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomSheetDialogThem" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="backgroundBottomSheetStyle">
        <item name="android:background">@drawable/shape_background_bottom_sheep</item>
        <item name="android:backgroundTint">@color/front_wave_color_default</item>
    </style>

    <style name="bottomSheetLineStyle">
        <item name="android:background">@drawable/shape_bottom_sheet_line</item>
        <item name="android:backgroundTint">@color/background_main_default</item>
    </style>

    <style name="splashBackgroundStyle">
        <item name="android:background">@drawable/background</item>
        <item name="android:backgroundTint">@color/background_main_default</item>
    </style>

    <style name="splashMainTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_main_default</item>
        <item name="android:textSize">60sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="splashLogoStyle">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:background">@drawable/ic_logo</item>
    </style>

    <style name="homeBackgroundStyle">
        <item name="android:background">@drawable/background_wave</item>
    </style>

    <style name="buttonSwapModeStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/ic_hotline_miami</item>
    </style>

    <style name="homeMainTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_main_default</item>
        <item name="android:textSize">55sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="homeButtonStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/text_main_default</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:background">@drawable/shape_custom_button_home</item>
        <item name="android:backgroundTint">@color/button_home_default</item>
    </style>

    <style name="codingBackgroundStyle">
        <item name="android:background">@drawable/background</item>
        <item name="android:backgroundTint">@color/front_wave_color_default</item>
    </style>

    <style name="codingSaveButtonStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/ic_code_save</item>
        <item name="android:backgroundTint">@color/button_other_default</item>
    </style>

    <style name="codingButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textColor">@color/button_text_other_default</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:background">@drawable/shape_custom_button_coding</item>
        <item name="android:backgroundTint">@color/button_home_default</item>
    </style>

    <style name="savedBackgroundStyle">
        <item name="android:background">@drawable/background</item>
        <item name="android:backgroundTint">@color/front_wave_color_default</item>
    </style>

    <style name="savedButtonStyle">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">@color/button_text_other_default</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:background">@drawable/shape_custom_button_saved</item>
        <item name="android:backgroundTint">@color/button_other_default</item>
    </style>

    <item name="color_button_delete" type="color">@color/button_other_default</item>
    <item name="color_button_trash_delete" type="color">@color/button_text_other_default</item>

    <item name="color_block" type="color">@color/block_default</item>
    <item name="color_block_var" type="color">@color/block_var_default</item>
    <item name="color_block_set" type="color">@color/block_set_default</item>
    <item name="color_block_print" type="color">@color/block_print_default</item>
    <item name="color_block_input" type="color">@color/block_input_default</item>
    <item name="color_block_if" type="color">@color/block_if_default</item>
    <item name="color_block_for" type="color">@color/block_for_default</item>
    <item name="color_block_while" type="color">@color/block_while_default</item>
    <item name="color_block_break" type="color">@color/block_break_default</item>
    <item name="color_block_continue" type="color">@color/block_continue_default</item>
    <item name="color_block_func" type="color">@color/block_func_default</item>
    <item name="color_block_return" type="color">@color/block_return_default</item>
    <item name="color_block_end" type="color">@color/block_end_default</item>

    <item name="color_window_text_block" type="color">@color/window_text_block_default</item>
    <item name="color_text_block" type="color">@color/text_block_default</item>
    <item name="color_text_instruction_block" type="color">@color/text_instruction_block_default</item>
    <item name="color_stroke_block" type="color">@color/stroke_block_default</item>
    <item name="color_container" type="color">@color/container_default</item>
</resources>